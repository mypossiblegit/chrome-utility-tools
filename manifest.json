{
  "manifest_version": 3,
  "name": "Chrome Utility Tools",
  "version": "1.1",
  "description": "A modular Chrome extension for utility tools.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
